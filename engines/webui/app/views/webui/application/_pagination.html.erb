
<% if locals[:current_page] > 1 %>
	<%= link_to '⏮️', url_for(page: 1) %>
<% else %>
	⏮️
<% end %>

<% if locals[:current_page] > 1 %>
	<%= link_to '◀️', url_for(page: locals[:current_page]-1) %>
<% else %>
	◀️
<% end %>

<% [locals[:current_page]-5, locals[:current_page]].select(&:positive?).each do |page| %>
	<% if page == locals[:current_page] %>
		<strong><%= page %></strong>
	<% else %>
		<%= link_to page, url_for(page: page) %>
	<% end %>
<% end %>

<% if locals[:current_page] < locals[:max_pages] %>
	<%= link_to '»', url_for(page: locals[:current_page]+1) %>
<% end %>

<% if locals[:current_page] < locals[:max_pages] %>
	<%= link_to '▶️', url_for(page: locals[:current_page]+1) %>
<% else %>
	▶️
<% end %>

<% if locals[:current_page] < locals[:max_pages] %>
	<%= link_to '⏭️', url_for(page: locals[:max_pages]) %>
<% else %>
	⏭️
<% end %>